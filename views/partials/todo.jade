h1 My Todos
.row
  h3 Create a task
  form#todoForm(role='form', novalidate, name='taskForm')
    input(type='hidden', name='db_id', ng-model='todo._id')
    .form-group
      label Title:
      input#todoTitle(type='text', name='title', ng-model='todo.title')
    .form-group
      label Description:
      textarea#todoDescription(name='description', ng-model='todo.description')
    .form-group
      label Priority:
      input#todoPriority(type='text', name='priority', ng-model='todo.priority')
    .form-group
      label Complete by:
      input#todoDuedate(type='text', name='due_date', ng-model='todo.due_date')
    .form-group
      label Completed:
      input#todoDone(type='checkbox', name='complete', ng-model='todo.complete')
    button.btn.btn-success.btn-large(ng-click='submit()') Add Todo